// Test display -- Graphic, Page, Display and support pages
//    Notes: use 'n' and 'p' to transition to the next and previous pages
// ---
#define BENCHMARK 0

( TestGlutDisplay
   name: "My Main Window"

   // Leaving this unset will cause the program 
   // to find the latest openGL version available
   //glMajorVersion: 3
   //glMinorVersion: 2
   // Only core openGL components, no compatability
   //glCompatibility: true

   left:       -10.5
   right:       10.5
   bottom:     -10.5
   top:         10.5
   near:        -50.0
   far:          50.0
    
   clearDepth: 1.0
   clearColor: ( hsv 180.0 0.4 0.2 )
   //clearColor: ( rgb 1 1 1 )

   vpX:        500
   vpY:        150
   vpWidth:    500
   vpHeight:   500
             
 // list of shaders (only one for now)
 shaders: {
    default:
    ( Shader
       vertexShaderPath: "shaders/vertexShader.oes"
       fragmentShaderPath: "shaders/fragmentShader.oes"
    )
    font: 
    ( Shader
       vertexShaderPath: "shaders/text.v.oes"
       fragmentShaderPath: "shaders/text.f.oes"
    )
 }


#if BENCHMARK
   benchmark: true
#else
   page:   materials // First page
   #include "testBasic.epp"
#endif
)
